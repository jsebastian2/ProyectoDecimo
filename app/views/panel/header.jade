			li
				a(href='javascript:;')
					span.ion.ion-settings 
					| Settings
			li.divider
			li
				a(href='javascript:;')
					span.ion.ion-lock-combination
					| Lock Screen
			li
				a(href='javascript:;')
					span.ion.ion-power
					| Logout



	//li.floating-sidebar(ng-class="{'open': floatingSidebar}")
	li.floating-sidebar(ng-class="{'open': floatingSidebar}")
		a(href="" ng-click='toggleFloatingSidebar()')
			i.fa.fa-th
		.sidebar-wrap.ps-container.ps-active-y(custom-scrollbar='')
			
			tabset(justified="true")
				tab(heading="CHAT")
					.chat-tab.clearfix
						h5.title.mt0.mb30 Online
						.user-container.mb15
							img(src='images/perfil/pruebaadmin.jpg', alt='')
							.desc
								p.mb0 John Wick
								p.xsmall
									span.ion.ion-location
									| San Franciso, USA
							span.ion.ion-record.avail.right.on
						.user-container.mb15
							img(src='images/perfil/pruebaadmin.jpg', alt='')
							.desc
								p.mb0 John Wick
								p.xsmall
									span.ion.ion-location
									| California, USA
							span.ion.ion-record.avail.right.away

				tab(heading="INFO")
					.info-tab.clearfix
						h5.title.mt0.mb30 Work in Progress
						ul.list-unstyled.mb15.clearfix
							li
								.clearfix.mb10
									small.left App Upload
									small.right 80%
								.progress-xs.progress.ng-isolate-scope(value='80', type='primary')
