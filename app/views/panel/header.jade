						h5.title.mt0.mb30 Settings

						.clearfix.mb15
							.left
								p Show me online
							.right
								.ui-toggle.ui-toggle-success.ui-toggle-xs
									label
										input(type='checkbox', checked='')
										span

						.clearfix.mb15
							.left
								p Notifications

							.right
								.ui-toggle.ui-toggle-success.ui-toggle-xs
									label
										input(type='checkbox')
										span


