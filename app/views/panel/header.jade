ul.list-unstyled.left-elems
	// nav trigger/collapse
	li
		a.nav-trigger.fa.fa-bars(href="" ng-click="toggleNav()")

	//  Search box 
	li
		.form-search.hidden-xs
			form#site-search(action="na")
				input.form-control(type="search" placeholder="Type here for search...")
				button.fa.fa-searchf(type="submit")


	// site-logo for mobile nav
	li
		.site-logo.visible-xs
			a.text-uppercase.h3(href="#/dashboard")
				span.text Materia

	// fullscreen
	li.fullscreen.hidden-xs(ng-click="goFullScreen()")
		a(href="")
			i.fa.fa-arrows-alt

	// notification drop
	li.notify-drop.hidden-xs.dropdown(dropdown="")
		a(href="" dropdown-toggle="")
			i.fa.fa-exclamation-triangle
			span.badge.badge-danger.badge-xs.circle 3
		
		.panel.panel-default.dropdown-menu(custom-scrollbar="")
			.panel-heading You have 3 new notifications 
				a.right.btn.btn-xs.btn-pink.mt-3(href="javascript:;") Show All
			.panel-body
				ul.list-unstyled
					li.clearfix
						a(href="")
							span.fa.fa-archive.left.bg-success
							.desc
								strong App downloaded
								p.small.text-muted 1 min ago


	// Idiomas
	li.notify-drop.hidden-xs.dropdown(dropdown="")
		a(href="" dropdown-toggle="")
			i.fa.fa-flag-checkered
			{{ 'IDIOMA_MENU' | translate }}
		
		.panel.panel-default.dropdown-menu(custom-scrollbar="")
			.panel-heading {{'IDIOMA_MENU' | translate }}
			.panel-body
				ul.list-unstyled
					li.clearfix(ng-repeat="idioma in idiomas")
						a(href="" ng-click="cambiarIdioma(idioma.abrev)")
							span.fa.fa-flag.left.bg-success
							.desc
								strong {{idioma.nombre}}


ul.list-unstyled.right-elems.ng-scope
	li.profile-drop.hidden-xs.dropdown(dropdown='')
		a(href='', dropdown-toggle='', aria-haspopup='true', aria-expanded='false')
			img(src='images/perfil/pruebaadmin.jpg', alt='admin-pic')
