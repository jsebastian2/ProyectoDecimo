div(ng-repeat="pregunta in preguntaking.preguntas_traducidas | porIdioma:idioma")

	md-whiteframe.md-whiteframe-z2.definicion-frame(layout style="padding: 10px")
		span(flex="5") {{indice+1}}.
		span(ng-bind-html="pregunta.enunciado" flex="95")

		.ayuda-preg-showed(ng-show="pregunta.ayuda" ng-click="pregunta.mostrar_ayuda=true")
			a(ng-show="!pregunta.mostrar_ayuda")
				i.fa.fa-anchor
			span(ng-show="pregunta.mostrar_ayuda")
				| {{pregunta.ayuda}}



	//Opciones
	md-list(ng-if="preguntaking.tipo_pregunta=='Multiple'")
		md-list-item(ng-repeat="opcion in pregunta.opciones")
			md-checkbox(ng-model="topping.wanted")
			p {{ opcion.definicion }}
			md-icon.md-secondary.fa.fa-commenr(ng-click="" aria-label="Chat")



	//opciones de 
	div.opciones(layout="row" layout-wrap layout-fill ng-if="preguntaking.tipo_pregunta=='Test'"
		style="padding-bottom: 32px; justify-content: center;")

		md-whiteframe.pointer.md-whiteframe-z2-btn(ng-class="{'elegida':opcion.elegida}"
			ng-if="!opcion.nueva" flex="45" ng-click="elegirOpcion(pregunta, opcion)"		
			ng-repeat="opcion in pregunta.opciones")

			span(style="font-weight: bold;") {{ indexChar($index) }}.
			span {{ opcion.definicion }}