.page.page-auth

	.auth-container
		
		.form-head.mb20
			h1.site-logo.h2.mb5.mt5.text-center.text-uppercase.text-bold
				a(href="/Materia")
			h5.text-normal.h5.text-center Sign In to Dashboard


		.form-container
			form.form-horizontal
				md-input-container
					label Email Id
					input(type="text" ng-model="credentials.username" placeholder="Enter your email-id")
				

				md-input-container
					label Password
					input(type="password" ng-model="credentials.password" placeholder="Type your password")
				
				
				.clearfix
					.ui-checkbox.ui-checkbox-primary.right
						label
							input(type="checkbox")
							span Remember me
				.clearfix.mb15
					a.text-success.small(href="#/pages/forget-pass") Forget your password?
				.btn-group.btn-group-justified.mb15
					.btn-group
						button.btn.btn-facebook(type="button")
							span.ion.ion-social-facebook &nbsp;&nbsp;Facebook

					.btn-group
						button.btn.btn-success(type="submit") Sign In
				div.clearfix.text-center.small
					p Don't have an account?
						a(href="#/pages/signup") Create Now